<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  
  <jsp-config>
    <jsp-property-group>
      <url-pattern>/view/*</url-pattern>
      <include-prelude>/common/head.jsp</include-prelude>
    </jsp-property-group>
  </jsp-config>
  
  
  
  <servlet>
    <servlet-name>springBoardMybatis</servlet-name>
    <servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>springBoardMybatis</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  
  
  
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>
    		org.springframework.web.filter.CharacterEncodingFilter
    	</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping> 
</web-app>